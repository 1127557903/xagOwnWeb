    <script>
        // 定义一个address 存储数据
        var address = []
        var timer=null
        function checkAddress() {
            let value = $('#name').val()
            let res = address.find(item => item.name == value)
            if (!res) {
                return
            }
            let addresss = res.address
            $('#address').val(addresss)
        }
        const handlerSetTime = () => {
            if(timer){
                clearTimeout(timer)
            }
            timer=setTimeout(()=>{
                getAddress()
            },1000)
        }
        // 地点查询
        function getAddress() {
            let value = $('#name').val()
            let data = {
                ak: 'PYwrQ1BnS3KEYSbhoGEjvjVPaYyxGsS1',
                region: '达州',
                query: value,
                output: 'json',
                page_size: 20,
                page_num: 0,
                scope: 1,
                coord_type: 3
            }
            let url = "http://api.map.baidu.com/place/v2/search"
            $.ajax({
                type: "get", //请求方式
                async: true, //是否异步
                url,
                dataType: "jsonp", //跨域json请求一定是jsonp
                data, //请求参数
                success: function (data) {
                    //请求成功处理，和本地回调完全一样
                    let res = data.results
                    address = res
                    let str = ''
                    res.forEach((item, index) => {
                        str += `<option value="${item.name}" >${item.address}</option>`
                    })
                    $('#options').html(str)
                },
                complete: function () {
                    //请求完成的处理
                },
                error: function () {
                    //请求出错处理
                }
            })

        }
    </script>
    <script>
        var filesTitle = null
