            $('#name').val('');
            $('#price').val('');
            $('#start').val('')
            $('#type').val('');
            $('#slogan').val('');
            let labelArr = $('input[name="label"]')
            let serviceArr= $('input[name="service"]')
            $('#address').val('');
            for (item of labelArr) {
                $(item).prop("checked", false);
            }
            for (item of serviceArr) {
                $(item).prop("checked", false);
            }
            $('#imgBox').html('')
        }

        // 输入校验
        function checkinput(){
            let name = $('#name').val();
            let price = $('#price').val();
            let start = $('#start').val()
            let slogan = $('#slogan').val();
            let labelArr = $('input[name="label"]')
            let serviceArr= $('input[name="service"]')
            let type = $('#type').val();
            let address = $('#address').val();
            let labels = []
            for (item of labelArr) {
                if (item.checked) {
                    labels.push(item.title)
                }
            }
            let label = labels.join(',')
            let services = []
            for (item of serviceArr) {
                if (item.checked) {
                    services.push(item.title)
                }
            }
            let service = services.join(',')
            let isOver = true

            let checkObj = {name,price,start,type,label,address,slogan}
            for(item in checkObj){
                if(!checkObj[item]){
                    isOver = false
                }
            }
            let params = {name,price,start,type,label,address,slogan,service}

            return {isOver,params}
        }

        function update() {
            let {isOver,params} = checkinput()
            if(!isOver){
                parent.layer.alert('请填写完整表单', function (i) {
                    parent.layer.close(i);
                })
                return
            }
            let filesArr = []
            if (addtype == 'add') {
                if(!filesTitle){
                    parent.layer.alert('请选择标题图片', function (i) {
                        parent.layer.close(i);
                    })
                    return
                }
                for(item in filesTitle){
                    filesArr.push(filesTitle[item])
                }
                if(!filesShow){
                    parent.layer.alert('请选择内容图片', function (i) {
                        parent.layer.close(i);
                    })
                    return
                }
                let hadImg = false
                for(item in filesShow){
                    filesArr.push(filesShow[item])
                    hadImg = true
                }
                if(!hadImg){
                    parent.layer.alert('请选择内容图片', function (i) {
                        parent.layer.close(i);
                    })
                    return
                }
            }
            if(addtype == 'update') {
                let src = $('#ownimg')[0].src
                let titleImgChange = false
                if (src !== 'http://localhost:3000' + dataObj.titleImg) {
                    titleImgChange = true
                    for(item in filesTitle){
                        filesArr.push(filesTitle[item])
                    }
                }
                if(!filesShow && imgArr.length == 0){
                    parent.layer.alert('请选择内容图片', function (i) {
                        parent.layer.close(i);
                    })
                    return
                }
                let hadImg = false
                for(item in filesShow){
                    filesArr.push(filesShow[item])
                    hadImg = true
                }
                if(!hadImg  && imgArr.length == 0){
                    parent.layer.alert('请选择内容图片', function (i) {
                        parent.layer.close(i);
                    })
                    return
                }
                let newArr = imgArr.map(item => {
                    return item.img
                })
                params={
                    ...params,
                    titleImgChange,
                    imgArr: JSON.stringify(newArr),
                    id:dataObj.id
                }
            }
            parent.layer.load()
            uploadFiles(url,filesArr,params).then(res => {
                parent.layer.closeAll('loading')
                //如果上传失败
                if (res.code === '303') {
                    let msg = res.msg.sqlMessage || res.msg
                    parent.layer.alert(msg, function (i) {
                        parent.layer.close(i);
                    })
                    return
                }
                if (res.code !== '200' && res.code !== '303') {
                    parent.layer.alert(res.msg, function (i) {
                        parent.layer.close(i);
                    })
                    return
                }
                parent.layer.alert(res.msg, function (i) {
                    parent.layer.close(i);
                    location.reload() // 刷新父窗口
                })
            })

        }
      
