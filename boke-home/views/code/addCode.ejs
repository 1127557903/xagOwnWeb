        .layui-form-item {
            position: relative;
        }

        .removeInput {
            position: absolute;
            left: 0px;
            top: 50%;
            transform: translate(0,-50%);
        }

        #test1 {
            width: 48px;
            height: 48px;
            display: block;
            background: #ccc;
